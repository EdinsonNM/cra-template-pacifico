{
  "package": {
    "dependencies": {
      "@testing-library/jest-dom": "^5.9.0",
      "@testing-library/react": "^10.2.1",
      "@testing-library/user-event": "^12.0.2",
      "web-vitals": "^0.2.2",
      "lighthouse": "^6.0.0",
      "react-hook-form": "^4.9.3",
      "react-redux": "^7.1.3",
      "react-router-dom": "^5.1.2",
      "react-scripts": "3.4.0",
      "redux": "^4.0.5",
      "redux-actions": "^2.6.5",
      "redux-logger": "^3.0.6",
      "redux-observable": "^1.2.0",
      "rxjs": "^6.5.4",
      "workbox-cli": "^5.1.3"
    },
    "devDependencies": {
      "babel-eslint": "^10.0.3",
      "bundlesize": "^0.18.0",
      "eslint": "^6.6.0",
      "eslint-config-airbnb": "^18.0.1",
      "eslint-config-prettier": "^6.5.0",
      "eslint-plugin-import": "^2.18.2",
      "eslint-plugin-jsx-a11y": "^6.2.3",
      "eslint-plugin-prettier": "^3.1.1",
      "eslint-plugin-react": "^7.16.0",
      "eslint-plugin-react-hooks": "^2.2.0",
      "husky": "^3.0.9",
      "lint-staged": "^9.4.2",
      "node-sass": "^4.13.1",
      "prettier": "^1.18.2",
      "progress-bar-webpack-plugin": "^1.12.1",
      "react-snap": "^1.23.0",
      "webpack-bundle-analyzer": "^3.6.0"
    },
    "scripts": {
      "bundlesize": "bundlesize",
      "lh": "lighthouse http://localhost:5000 --output html --output-path ./tmp/report.html --view",
      "analyze": "node tools/analyze.js",
      "postbuild": "react-snap",
      "generate-sw": "workbox generateSW scripts/workbox-config.js",
      "build-snap": "react-scripts build && react-snap && yarn run generate-sw"
    },
    "eslintConfig": {
      "extends": ["react-app", "plugin:prettier/recommended"]
    },
    "prettier": {
      "printWidth": 90,
      "bracketSpacing": false,
      "trailingComma": "es5",
      "tabWidth": 4
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*.+(js|jsx)": ["eslint --fix", "git add"],
      "*.+(json|css|md)": ["prettier --write", "git add"]
    },
    "bundlesize": [
      {
        "path": "./build/static/js/main**.js",
        "maxSize": "100 kB"
      },
      {
        "path": "./build/static/js/**.js",
        "maxSize": "100 kB"
      },
      {
        "path": "./build/static/css/**.css",
        "maxSize": "10 kB"
      },
      {
        "path": "./build/static/media/**.*",
        "maxSize": "50 kB"
      }
    ],
    "reactSnap": {
      "inlineCss": true
    }
  }
}
